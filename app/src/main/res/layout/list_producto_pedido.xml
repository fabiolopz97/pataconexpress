<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_producto_pedido"
    android:layout_width="match_parent"
    android:layout_height="105dp"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="0dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewProductoPedido"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_gravity="center"
        app:cardCornerRadius="4dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/imageViewList"
            android:layout_width="66dp"
            android:layout_height="70dp" />

        <TextView
            android:id="@+id/textViewNombreProd"
            android:layout_width="335dp"
            android:layout_height="35dp"
            android:layout_marginLeft="66dp"
            android:gravity="center_vertical"
            android:textColor="@color/primary_text"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textViewPrecioProd"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:textColor="@color/primary_text"
            android:text="Precio:"
            android:textSize="20dp"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="66dp"/>

        <LinearLayout
            android:layout_width="73dp"
            android:layout_height="35dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="215dp"
            app:layout_constraintCircleRadius="4dp"
            tools:layout_editor_absoluteX="116dp"
            tools:layout_editor_absoluteY="129dp">

            <ImageButton
                android:id="@+id/buttonDecrementar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="35"
                android:backgroundTint="@color/primary"
                android:src="@drawable/ic_img_remove" />

            <TextView
                android:id="@+id/textViewMostrarContador"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:gravity="center_horizontal"
                android:paddingTop="7dp"
                android:text="1"
                android:textSize="16dp"/>

            <ImageButton
                android:id="@+id/buttonIncrementar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="35"
                android:backgroundTint="@color/primary"
                android:src="@drawable/ic_img_add" />
        </LinearLayout>
        <TextView
            android:id="@+id/textViewDescripcionProd"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:textColor="@color/primary_text"
            android:textSize="20dp"
            android:layout_marginTop="70dp"/>

        <TextView
            android:id="@+id/textViewTotalProd"
            android:layout_width="344dp"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:textColor="@color/primary_text"
            android:text="Total:"
            android:textSize="20dp"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="215dp"/>


    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>